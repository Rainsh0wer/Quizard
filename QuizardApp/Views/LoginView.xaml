<UserControl x:Class="QuizardApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Label Content="Tên đăng nhập:" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10" Height="30"/>
            
            <Label Content="Mật khẩu:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Height="30"/>
            
            <Button Content="Đăng nhập" Height="35" Background="#FF007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>