<UserControl x:Class="QuizardApp.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Đăng ký tài khoản" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Label Content="Tên đăng nhập:" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10" Height="30"/>
            
            <Label Content="Email:" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10" Height="30"/>
            
            <Label Content="Mật khẩu:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30"/>
            
            <Label Content="Xác nhận mật khẩu:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" Height="30"/>
            
            <Button Content="Đăng ký" Height="35" Background="#FF28A745" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="Quay lại đăng nhập" Height="35" Background="Transparent" Foreground="#FF007ACC" BorderBrush="#FF007ACC" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</UserControl>